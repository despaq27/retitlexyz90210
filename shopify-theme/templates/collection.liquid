{% comment %}
  Collection Template - Used for Street/Studio feeds
{% endcomment %}

<section class="fixed inset-0 z-10 bg-black">
  <!-- Collection Header -->
  <div class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-md py-4 px-6 flex items-center justify-between">
    <a href="/" class="text-white font-mono text-sm hover:text-zinc-400 transition-colors">‚Üê HOME</a>
    <h1 class="text-xl font-black uppercase tracking-wider text-white">{{ collection.title }}</h1>
    <button id="cart-toggle" class="text-white font-mono text-sm hover:text-zinc-400 transition-colors">
      BAG ({{ cart.item_count }})
    </button>
  </div>

  <!-- Feed Container -->
  <div class="h-full w-full overflow-y-scroll snap-y snap-mandatory scroll-smooth no-scrollbar pt-16" id="feed-container">
    {% for product in collection.products %}
      <div class="feed-card h-screen w-full snap-start relative flex items-center justify-center" data-index="{{ forloop.index0 }}">
        <!-- Background Image -->
        <div class="absolute inset-0 z-0">
          {% if product.featured_image %}
            <img 
              src="{{ product.featured_image | image_url: width: 1200 }}" 
              alt="{{ product.title }}"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          {% else %}
            <div class="w-full h-full bg-gradient-to-br from-zinc-800 to-zinc-900"></div>
          {% endif %}
          <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-black/80"></div>
        </div>

        <!-- Product Info Overlay -->
        <div class="absolute bottom-24 left-6 z-10 card-content" style="opacity: 0; transform: translateY(30px);">
          <div class="flex items-center space-x-2 mb-2">
            {% if product.tags contains 'new' %}
              <span class="bg-white/10 backdrop-blur-md px-2 py-1 text-xs font-mono rounded-sm border border-white/20">NEW DROP</span>
            {% endif %}
          </div>
          <h2 class="text-4xl font-black uppercase tracking-tighter leading-none mb-2 text-white drop-shadow-lg">
            {{ product.title }}
          </h2>
          <p class="text-2xl font-mono text-green-400 font-bold">{{ product.price | money }}</p>
        </div>

        <!-- Side Actions -->
        <div class="absolute right-4 bottom-32 flex flex-col space-y-6 z-20">
          <button class="w-12 h-12 rounded-full bg-white/10 backdrop-blur-md flex items-center justify-center hover:bg-white/20 transition-colors wishlist-btn" data-product-id="{{ product.id }}">
            ‚ù§Ô∏è
          </button>
          <button class="w-12 h-12 rounded-full bg-white/10 backdrop-blur-md flex items-center justify-center hover:bg-white/20 transition-colors share-btn">
            üîó
          </button>
        </div>

        <!-- Add to Cart -->
        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20">
          <button 
            class="add-to-cart-btn bg-white text-black px-8 py-3 font-black uppercase tracking-wider hover:bg-green-400 transition-colors"
            data-variant-id="{{ product.first_available_variant.id }}"
          >
            ADD TO BAG
          </button>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.feed-card');

    // Animate cards on scroll
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const content = entry.target.querySelector('.card-content');
          if (content) {
            gsap.to(content, { opacity: 1, y: 0, duration: 0.5, ease: 'power3.out' });
          }
        }
      });
    }, { threshold: 0.6 });

    cards.forEach(card => observer.observe(card));

    // Add to Cart functionality
    document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const variantId = e.target.dataset.variantId;
        const formData = { items: [{ id: parseInt(variantId), quantity: 1 }] };

        try {
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(formData)
          });

          if (response.ok) {
            e.target.textContent = 'ADDED ‚úì';
            e.target.classList.add('bg-green-400');
            
            // Update cart count
            const cartResponse = await fetch('/cart.js');
            const cart = await cartResponse.json();
            document.getElementById('cart-toggle').textContent = `BAG (${cart.item_count})`;

            setTimeout(() => {
              e.target.textContent = 'ADD TO BAG';
              e.target.classList.remove('bg-green-400');
            }, 2000);
          }
        } catch (error) {
          console.error('Error adding to cart:', error);
        }
      });
    });

    // Share button
    document.querySelectorAll('.share-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        if (navigator.share) {
          navigator.share({ title: document.title, url: window.location.href });
        } else {
          navigator.clipboard.writeText(window.location.href);
          btn.textContent = '‚úì';
          setTimeout(() => btn.textContent = 'üîó', 1500);
        }
      });
    });
  });
</script>
